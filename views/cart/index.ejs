<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cart</title>
</head>

<body>
    <div>
        <h2>Shopping Cart</h2>
        <h4><a href="/customer">Add</a></h4>
        <h4><a href="/cart/remove">Empty</a></h4>

        <% if(cart.items != "") { %>
            <table border="1">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Per Price</th>
                        <th>Price</th>


                    </tr>
                </thead>
                <%  console.log("cart Page");console.log(cart.total[0]); %>
                    <% for(var i=0; i < cart.items.length; i++){ %>
                        <tr>

                            <td>
                                <%= cart.items[i].title %>
                            </td>
                            <td>
                                <%=  cart.items[i].qty %>
                            </td>
                            <td>
                                <%=  cart.items[i].price %>

                            </td>
                            <td>
                                <%=  cart.items[i].price*cart.items[i].qty %>



                        </tr>
                        <% } %>


            </table>
            <div>
                <h3>Total:
                    <%=  cart.total %> ‎৳
                </h3>

            </div>

            <% } else if(cart.items == "") { %>

                <h4>Empty Cart</h4>

                <%}%>

    </div>

</body>

</html>